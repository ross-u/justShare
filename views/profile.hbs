<h2>List all your products</h2>

<br>



<a href="/logout"><button>Logout</button></a>
<a href="/product/new"><button>List new product</button></a>

<h1>Listed Products</h1>
{{#each allProductsFromDB}}
  <p>{{this.name}}</p>
  <img src="{{this.image}}" alt="">
  <p>{{this.description}}</p>
  <p>{{this.allergens}}</p>
  <a href="products/edit"><button>Edit</button></a>
  <a href="products/delete"><button>Delete</button></a>
{{/each}}


